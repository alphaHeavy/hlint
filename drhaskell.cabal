cabal-version:      >= 1.2
build-type:         Simple
name:               drhaskell
version:            0.9.0.0
license:            GPL
license-file:       LICENSE
category:           Development
author:             Neil Mitchell <ndmitchell@gmail.com>
maintainer:         Neil Mitchell <ndmitchell@gmail.com>
copyright:          Neil Mitchell 2006-2008
synopsis:           Source code suggestions
description:
    DrHaskell gives suggestions on how to improve your source code.
homepage:           http://www.cs.york.ac.uk/~ndm/drhaskell/
stability:          Beta
data-dir:           data
data-files:
    Hints.hs
    Test.hs

executable drhaskell
    build-depends: base == 4.0.*, syb, filepath, directory, haskell-src-exts == 0.3.*, uniplate == 1.2.*, mtl

    main-is:            Main.hs
    hs-source-dirs:     src
    other-modules:
        CmdLine
